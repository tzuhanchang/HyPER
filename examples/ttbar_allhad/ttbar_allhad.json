{
    "db_config":                    "examples/ttbar_allhad/db.yaml",
    "train_data":                   "./datasets/ttbar_train.h5",
    "valid_data":                   "./datasets/ttbar_val.h5",

    "all_matched":                  true,

    "message_passing_recurrent":    3,
    "message_feats":                64,
    "contraction_feats":            128,
    "hyperedge_order":              3,
    "dropout":                      0.01,

    "optimizer":                    "Adam",
    "learning_rate":                0.0003,
    "criterion_edge":               "BCE",
    "criterion_hyperedge":          "BCE",
    "alpha":                        0.8,
    "loss_reduction":               "mean",
    "loss_scale":                   1.0,

    "epochs":                       500,
    "batch_size":                   4096,
    "train_val_split":              0.9,

    "device":                       "gpu",
    "num_device":                   1,
    "num_dataloader_workers":       12,

    "savedir":                      "./HyPER_logs"
}
